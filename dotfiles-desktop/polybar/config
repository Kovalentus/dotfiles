padding-left = 2
padding-right = 3
module-margin-left = 2
module-margin-right = 2

; font-0 = Noto:pixelsize=16;2
; font-0 = Playfair Display:pixelsize=16:weight=bold;2
font-0 = SFNS Display:pixelsize=12;2
