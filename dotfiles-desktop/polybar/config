[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color1:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}


[bar/top]
; dpi = 90
monitor =
bottom = false
width = 100%
height = 28
; radius = 10
line-size = 0
offset-x =
offset-y =
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 2
underline-color = ${colors.foreground}

padding-left = 2
padding-right = 3
module-margin-left = 3
module-margin-right = 3

; font-0 = Noto:pixelsize=16;2
; font-0 = Playfair Display:pixelsize=16:weight=bold;2
font-0 = SFNS Display:pixelsize=14;2
; font-0 = SFNS Display:pixelsize=16:weight=bold;2
font-1 = Font Awesome 5 Free:pixelsize=15;3
font-2 = Material Icons:pixelsize=13;3
font-3 = SpaceMono Nerd Font Mono:pixelsize=13;5
font-4 = Weather Icons:size=16;4
font-5 = Noto:pixelsize=16;2
font-6 = SFNS Display:pixelsize=16;2

fixed-center = true

modules-left = i3
modules-center = spotify date
modules-right = volume temperature powermenu

tray-position = left
override-redirect = false
wm-restack = i3
; tray-transparent = true
tray-background = ${colors.background}

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline= ${colors.background}
label-focused-padding = 4

label-occupied = %index%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-background = ${colors.background-alt}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 4

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
format-underline = ${colors.foreground-alt}
label-mode = ${colors.foreground-alt}
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
; label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${module/bspwm.label-occupied-foreground}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
; label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-padding = ${module/bspwm.label-urgent-padding}



[module/date]
type = internal/date
interval = 1.0
label-font = 0
date = "%A %d %b"
time = "%H:%M"
label = %date%    %time%
format-underline = ${colors.foreground-alt}
label-foreground = ${colors.foreground}
label-background = ${colors.background}
; label-padding-right = 4
; label-padding-left = 4

[module/time]
type = internal/date
interval = 1.0
label-font = 0
time = "%H:%M"
label = "%time%"
label-foreground = ${colors.foreground}
label-background = ${colors.background}

