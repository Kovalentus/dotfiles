ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®
ramp-headphones-0 = ÔÄ•
ramp-headphones-1 = ÔÄ•
ramp-headphones-2 = ÔÄ•


[module/spotify]
type = custom/script
interval = 1
format-prefix = "ÓÉ¨ "
format = <label>
exec = python3 ~/.config/polybar/scripts/spotify.py
click-left = playerctl play-pause
scroll-up = playerctl previous
scroll-down = playerctl next
format-underline = ${colors.foreground}

[module/temperature]
type = internal/temperature
interval = 0.5
warn-temperature = 60
label-font = 3

format = <ramp> <label>
format-underline = ${colors.foreground-alt}
; label-font = 6
format-warn = <ramp>  <label-warn>

label = %temperature-c%
label-foreground = ${colors.foreground-alt}
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}
; label-padding-right = 4
; ramp-padding-left = 4

ramp-font = 1
ramp-0 = Ôãä
ramp-1 = Ôãâ
ramp-2 = Ôãà
ramp-3 = Ôãá

ramp-foreground = ${colors.foreground-alt}

[module/backlight]
type = internal/backlight

card = intel_backlight
enable-scroll = true

;format = <ramp><label>
format = <ramp>
label = %percentage%

ramp-0 = ÔÄÜ
ramp-1 = ÔÑ£
ramp-2 = ÔÄÖ


[module/powermenu]
type = custom/menu

format-spacing = 1
format-underline = ${colors.foreground-alt}
always-centered = true
expand-right = false

label-open = "  ÔÄë  "
label-open-foreground = ${colors.foreground-alt}
label-close = ÔÄç
label-close-foreground = ${colors.foreground}
label-separator = " "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = | Ôã∂
menu-0-0-exec = i3-msg exit
menu-0-1 = " ÔÄû"
menu-0-1-exec = reboot
menu-0-2 = ÔÄë |
menu-0-2-exec = systemctl poweroff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
