[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color1:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/top]
monitor =
bottom = false
width = 100%
height = 34
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = ${colors.foreground}

padding-left = 0
padding-right = 0
margin-right = 5
module-margin-left = 0
module-margin-right = 0

font-0 = Noto:pixelsize=12;2
font-1 = Font Awesome 5 Free:pixelsize=13;3
font-2 = Material Icons:pixelsize=13;3
font-3 = SpaceMono Nerd Font Mono:pixelsize=20;5
font-4 = Weather Icons:size=16;4
font-5 = Noto:pixelsize=12:weight=bold;2

fixed-center = true

modules-left = i3
modules-center = spotify date time
modules-right = volume temperature powermenu


[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline= ${colors.background}
label-focused-padding = 4

label-occupied = %index%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-background = ${colors.background-alt}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 4

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${module/bspwm.label-occupied-foreground}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-padding = ${module/bspwm.label-urgent-padding}



[module/date]
type = internal/date
interval = 1.0
label-font = 0
date = "%A %d %b"
label = "%date%"
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding-right = 4
label-padding-left = 4

[module/time]
type = internal/date
interval = 1.0
label-font = 0
time = "%H:%M"
label = "%time%"
label-foreground = ${colors.foreground}
label-background = ${colors.background}


[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-voulme-padding = 0
format-volume-foreground = ${colors.foreground-alt}
label-volume = %percentage%
ramp-volume-padding-left = 75
label-volume-padding-right = 3

;format-muted-prefix = " "
format-muted = <label-muted>
format-muted-foreground = ${colors.foreground-alt}
label-muted = "mute"
format-muted-padding = 4

ramp-volume-font = 1
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-2 = 


[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/scripts/spotify.py
format-underline = ${colors.foreground}

[module/temperature]
type = internal/temperature
interval = 0.5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp>  <label-warn>

label = %temperature%
label-foreground = ${colors.foreground-alt}
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-font = 1
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

ramp-foreground = ${colors.foreground-alt}

[module/backlight]
type = internal/backlight

card = intel_backlight
enable-scroll = true

;format = <ramp><label>
format = <ramp>
label = %percentage%

ramp-0 = 
ramp-1 = 
ramp-2 = 


[module/powermenu]
type = custom/menu

format-spacing = 1
format-padding = 5
always-centered = true

label-open = 
label-open-foreground = ${colors.foreground-alt}
label-close = 
label-close-foreground = ${colors.foreground}
label-separator = " "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = 
menu-0-0-exec = reboot
menu-0-1 = 
menu-0-1-exec = systemctl poweroff
menu-0-2 = 
menu-0-2-exec = i3-msg exit

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
