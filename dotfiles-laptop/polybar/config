[colors]
; background = #1b283c
; background-alt = #1b283c
; foreground = #eae5d4
; foreground-alt = #eae5d4
; alert = #eae5d4
; primary = #eae5d4

background = ${xrdb:color0:#222}
background-alt = ${xrdb:color1:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color8:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/top]
bottom = false
width = 100%
height = 25
line-size = 0
offset-x =
offset-y =
background = ${colors.background}
foreground = ${colors.foreground}
underline-color = ${colors.foreground}
border-bottom-size = 2
border-bottom-color = ${colors.foreground}
monitor = ${env:MONITOR:}

padding-left = 2
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = SF Pro Text:pixelsize=14;2
font-1 = Noto:pixelsize=13;2
font-2 = Source Code Pro:pixelsize=16;2
font-3 = Font Awesome 5 Free:pixelsize=13;3
font-4 = Font Awesome 5 Free Solid:pixelsize=13;3
font-5 = Font Awesome 5 Brands:pixelsize=13;3

fixed-center = true

modules-left = i3
modules-center = date
modules-right = spotify volume powermenu
separator = │
tray-position = left
tray-background = ${colors.background}
; border-size = 2
; border-color = ${colors.foreground}

[bar/bot]

modules-left = mpd
modules-right = xkeyboard filesystem temperature battery
separator = │

; border-top-size = 2
; border-top-color = ${colors.foreground}

bottom = true
line-size = 0
; width = 1860
width = 100%
height = 20
offset-x = 0
offset-y =
background =
foreground = ${colors.foreground}
underline-size = 2
underline-color = ${colors.foreground}

padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = SF Pro Text:pixelsize=14;2
font-1 = Font Awesome 5 Free:pixelsize=13;3
font-2 = Font Awesome 5 Free Solid:pixelsize=13;3
font-3 = Font Awesome 5 Brands:pixelsize=15;2
font-4 = Source Code Pro:weight=regular:pixelsize=15;2

fixed-center = true
override-redirect = false
wm-restack = i3


[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline= ${colors.background}
label-focused-padding = 4

label-occupied = %index%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-background = ${colors.background-alt}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 4

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
format-underline = ${colors.foreground}
label-mode = ${colors.foreground}
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
; pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
; label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${module/bspwm.label-occupied-foreground}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.foreground-alt}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-padding = ${module/bspwm.label-urgent-padding}



[module/date]
type = internal/date
interval = 1.0
label-font = 1
date = "%A %d %b"
time = "%H:%M"
label = %date%    %time%
format-underline = ${colors.foreground}
label-foreground = ${colors.foreground}
; label-padding-right = 4
; label-padding-left = 4

[module/time]
type = internal/date
interval = 1.0
label-font = 1
time = "%H:%M"
label = "%time%"
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/volume]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}
; format-volume-underline = ${colors.foreground}
; label-percentage = %percentage%

; format-muted-prefix = " "
format-muted-foreground = ${colors.foreground}
label-muted = "  ─────────"
label-muted-font = 0
; label-muted-underline = ${colors.foreground}

bar-volume-width = 10
bar-volume-foreground-0 = #A4C7A9
bar-volume-foreground-1 = #A4C7A9
bar-volume-foreground-2 = #A4C7A9
bar-volume-foreground-3 = #A4C7A9
bar-volume-foreground-4 = #A4C7A9
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #f5a70a
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 0
; bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 0
bar-volume-empty = ─
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${colors.foreground}

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
label-font = 0
exec = python3 $HOME/Scripts/spotify.py
click-left = playerctl play-pause
scroll-up = playerctl previous
scroll-down = playerctl next
; format-underline = ${colors.foreground}

[module/temperature]
type = internal/temperature
interval = 0.5
warn-temperature = 60
label-font = 5

format = <ramp> <label>
; format-underline = ${colors.foreground}
format-warn = <ramp>  <label-warn>

label = %temperature-c%
label-foreground = ${colors.foreground}
label-warn = %temperature-c%
label-warn-font = 5
label-warn-foreground = ${colors.alert}
; format-warn-underline = ${colors.foreground}
; label-padding-right = 4
; ramp-padding-left = 4

; ramp-font = 1
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

ramp-foreground = ${colors.foreground}


[module/powermenu]
type = custom/menu

format-spacing = 1
; format-underline = ${colors.foreground}
always-centered = true
expand-right = false

label-open = ""
label-open-foreground = ${colors.foreground}
label-close = 
label-close-foreground = ${colors.foreground}
label-separator = " "
label-separator-foreground = ${colors.foreground}

menu-0-0 =  
menu-0-0-exec = i3-msg exit
menu-0-1 = 
menu-0-1-exec = reboot
menu-0-2 = │
menu-0-2-exec = systemctl poweroff
; menu-0-0-underline = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98

format-charging = <animation-charging> <label-charging>
; format-charging-underline = ${colors.foreground}
format-full = "  Full"
; format-full-underline = ${colors.foreground}

format-discharging = <ramp-capacity> <label-discharging>
; format-discharging-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-framerate = 150

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5


